# Server Configuration
PORT=3000
HOST=0.0.0.0

# OpenAPI Spec Configuration
OPEN_API_SPEC_POST=3000
OPEN_API_SPEC_HOST=localhost

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=lotto_probability
DATABASE_URL=postgres://postgres:postgres@localhost:5433/lotto_probability

# Repository Configuration
REPOSITORY_CHUNK_SIZE=500

# JWT Configuration (REQUIRED - Generate a secure random string)
JWT_SECRET=your-secret-jwt-key-change-this-in-production

# Stripe Configuration (REQUIRED for subscription features)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Email Configuration (Optional - will log to console if not set)
# RESEND_API_KEY=re_your_resend_api_key_here
# FROM_EMAIL=noreply@yourdomain.com
# APP_NAME=LottoLens

# Cron Job Intervals (set to 'off' to disable, ~1 hour after draws)
# All times in UTC

# Estonian Lotteries (draws ~20:00 EET = 18:00 UTC)
EST_BINGO_LOTTO_CRON_INTERVAL=off       # Wed 20:00 EET → '0 19 * * 3'
EST_JOKKER_LOTTO_CRON_INTERVAL=off      # Daily 20:00 EET → '0 19 * * *'
EST_KENO_LOTTO_CRON_INTERVAL=off        # Twice daily 14:15,21:15 EET → '0 6 * * *' (morning catch-up)

# US Lotteries (~2h after draws)
US_POWERBALL_CRON_INTERVAL=off          # Mon,Wed,Sat 22:59 ET → '0 6 * * 2,4,0'
US_MEGA_MILLIONS_CRON_INTERVAL=off      # Tue,Fri 23:00 ET → '0 6 * * 3,6'
US_CASH4LIFE_CRON_INTERVAL=off          # Daily 21:00 ET → '0 4 * * *'
US_LOTTO_AMERICA_CRON_INTERVAL=off      # Mon,Wed,Sat 10:15 PM ET → '0 5 * * 2,4,0'
US_LUCKY_FOR_LIFE_CRON_INTERVAL=off     # Mon,Thu 22:38 ET → '0 6 * * 2,5'
US_CA_SUPERLOTTO_CRON_INTERVAL=off      # Wed,Sat 19:45 PT → '0 6 * * 4,0'
US_NY_LOTTO_CRON_INTERVAL=off           # Wed,Sat 20:15 ET → '0 3 * * 4,0'
US_TX_LOTTO_CRON_INTERVAL=off           # Mon,Wed,Sat 10:12 PM CT → '0 6 * * 2,4,0'

# UK Lotteries (draws ~20:00 UK)
UK_LOTTO_CRON_INTERVAL=off              # Wed,Sat 20:00 UK → '0 21 * * 3,6'
UK_THUNDERBALL_CRON_INTERVAL=off        # Tue,Wed,Fri,Sat 20:00 UK → '0 21 * * 2,3,5,6'
UK_SET_FOR_LIFE_CRON_INTERVAL=off       # Mon,Thu 20:00 UK → '0 21 * * 1,4'
UK_HOT_PICKS_CRON_INTERVAL=off          # Wed,Sat 20:00 UK → '0 21 * * 3,6'
UK_49S_LUNCHTIME_CRON_INTERVAL=off      # Wed,Sat 20:00 UK → '0 15 * * *'
UK_49S_TEATIME_CRON_INTERVAL=off        # Wed,Sat 20:00 UK → '0 20 * * *'

# Irish Lotteries (draws at specified times, Irish time = UK time)
IE_LOTTO_CRON_INTERVAL=off              # Wed,Sat 20:00 IE → '0 22 * * 3,6'
IE_DAILY_MILLION_CRON_INTERVAL=off      # Daily 14:00,21:00 IE → '0 15,22 * * *'

# Spanish Lotteries (run ~4h after draws)
ES_LA_PRIMITIVA_CRON_INTERVAL=off       # Mon,Thu,Sat 21:30 CET → '30 0 * * 2,5,0'
ES_BONOLOTO_CRON_INTERVAL=off           # Mon-Sat 21:30 CET → '30 0 * * 0,2-6'
ES_EL_GORDO_CRON_INTERVAL=off           # Sun 13:00 CET → '0 16 * * 0'

# French Lotteries (draws ~20:30 CET = 19:30 UTC, run ~1.5h after)
FR_LOTO_CRON_INTERVAL=off               # Mon,Wed,Sat 20:30 CET → '0 22 * * 1,3,6'
FR_KENO_CRON_INTERVAL=off               # Daily, multiple draws → '0 22 * * *'

# German Lotteries (all times in UTC)
DE_LOTTO_6AUS49_CRON_INTERVAL='* * * * *'       # Wed+Sat, fetch 21:00 UTC (22:00 CET) -> '0 21 * * 3,6'
DE_KENO_CRON_INTERVAL='* * * * *'               # Daily, fetch 21:00 UTC (22:00 CET) -> '0 21 * * *'

# Canadian Lotteries (draws ~22:30 ET, run ~3h after = 01:30 ET = 06:30 UTC)
CA_LOTTO_MAX_CRON_INTERVAL=off          # Tue,Fri → '30 6 * * 3,6'
CA_LOTTO_649_CRON_INTERVAL=off          # Wed,Sat → '30 6 * * 4,0'
CA_DAILY_GRAND_CRON_INTERVAL=off        # Mon,Thu → '30 6 * * 2,5'
CA_LOTTARIO_CRON_INTERVAL=off           # Sat → '30 6 * * 0'
CA_BC_49_CRON_INTERVAL=off              # Wed,Sat → '30 6 * * 4,0'
CA_QUEBEC_49_CRON_INTERVAL=off          # Wed,Sat → '30 6 * * 4,0'
CA_ATLANTIC_49_CRON_INTERVAL=off        # Wed,Sat → '30 6 * * 4,0'

# Australian Lotteries (draws 20:30 AEST / 21:30 AEDT = 10:30 UTC, run ~2.5h after)
AU_POWERBALL_CRON_INTERVAL=off          # Thu → '0 13 * * 4'
AU_SATURDAY_LOTTO_CRON_INTERVAL=off     # Sat → '0 13 * * 6'
AU_OZ_LOTTO_CRON_INTERVAL=off           # Tue → '0 13 * * 2'
AU_SET_FOR_LIFE_CRON_INTERVAL=off       # Daily → '0 13 * * *'
AU_WEEKDAY_WINDFALL_CRON_INTERVAL=off   # Mon,Wed,Fri → '0 13 * * 1,3,5'
AU_CASH3_CRON_INTERVAL=off              # Daily → '0 13 * * *'
AU_SUPER66_CRON_INTERVAL=off            # Sat → '0 13 * * 6'
AU_LOTTO_STRIKE_CRON_INTERVAL=off       # Wed,Sat → '0 13 * * 3,6'

# South African Lotteries (draws 21:00 SAST = 19:00 UTC, run ~2h after)
ZA_DAILY_LOTTO_CRON_INTERVAL=off        # Daily 21:00 SAST → '0 21 * * *'
ZA_LOTTO_CRON_INTERVAL=off              # Wed,Sat 21:00 SAST → '0 21 * * 3,6'
ZA_POWERBALL_CRON_INTERVAL=off          # Tue,Fri 21:00 SAST → '0 21 * * 2,5'

# Shared Lotteries
EUROMILLIONS_CRON_INTERVAL=off          # Tue,Fri 21:05 CET → '0 21 * * 2,5'
EUROJACKPOT_CRON_INTERVAL=off           # Tue,Fri 21:00 Helsinki → '0 20 * * 2,5'
VIKINGLOTTO_CRON_INTERVAL=off           # Wed 20:00 EET → '0 19 * * 3'
EURODREAMS_CRON_INTERVAL=off            # Mon,Thu 21:00 CET → '0 21 * * 1,4'
