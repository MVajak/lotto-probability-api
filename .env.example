# Server Configuration
PORT=3000
HOST=0.0.0.0

# OpenAPI Spec Configuration
OPEN_API_SPEC_POST=3000
OPEN_API_SPEC_HOST=localhost

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=lotto_probability
DATABASE_URL=postgres://postgres:postgres@localhost:5433/lotto_probability

# Repository Configuration
REPOSITORY_CHUNK_SIZE=500

# JWT Configuration (REQUIRED - Generate a secure random string)
JWT_SECRET=your-secret-jwt-key-change-this-in-production

# Stripe Configuration (REQUIRED for subscription features)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Email Configuration (Optional - will log to console if not set)
# RESEND_API_KEY=re_your_resend_api_key_here
# FROM_EMAIL=noreply@yourdomain.com
# APP_NAME=LottoLens

# Cron Job Intervals (set to 'off' to disable)
# Estonian Lotteries
EST_BINGO_LOTTO_CRON_INTERVAL=off       # Wed - 0 23 * * 3
EST_JOKKER_LOTTO_CRON_INTERVAL=off      # Daily - 0 23 * * *
EST_KENO_LOTTO_CRON_INTERVAL=off        # Daily - 0 6 * * *

# US Lotteries (scheduled ~3 hours after draws)
US_POWERBALL_CRON_INTERVAL=off           # Mon,Thu,Sun - '0 7 * * 1,4,0'
US_MEGA_MILLIONS_CRON_INTERVAL=off       # Wed,Sat - '0 7 * * 3,6'
US_CASH4LIFE_CRON_INTERVAL=off           # Daily - '0 5 * * *'

# UK Lotteries
UK_LOTTO_CRON_INTERVAL=off                # Wed, Sat - 0 22 * * 3,6
UK_THUNDERBALL_CRON_INTERVAL=off          # Tue, Wed, Fri, Sat - 0 22 * * 2,3,5,6
UK_SET_FOR_LIFE_CRON_INTERVAL=off         # Mon, Thu - 0 22 * * 1,4
UK_HOT_PICKS_CRON_INTERVAL=off            # Mon, Thu - 0 21 * * 3,6

# Spanish Lotteries
ES_LA_PRIMITIVA_CRON_INTERVAL=off       # Mon,Thu,Sat draws - '0 21 * * 1,4,6'
ES_BONOLOTO_CRON_INTERVAL=off           # Mon-Sat draws - '0 21 * * 1-6'
ES_EL_GORDO_CRON_INTERVAL=off           # Sun draws - '0 21 * * 0'

# Shared Lotteries
EUROMILLIONS_CRON_INTERVAL=off          # Tue, Fri - 0 22 * * 2,5
EUROJACKPOT_CRON_INTERVAL=off           # Tue, Fri - 0 23 * * 2,5
VIKINGLOTTO_CRON_INTERVAL=off           # Wed - 0 23 * * 3
EURODREAMS_CRON_INTERVAL=off            # Mon,Thu draws - '0 21 * * 1,4'
