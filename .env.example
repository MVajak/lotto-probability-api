# Server Configuration
PORT=3000
HOST=0.0.0.0

# OpenAPI Spec Configuration
OPEN_API_SPEC_POST=3000
OPEN_API_SPEC_HOST=localhost

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=lotto_probability
DATABASE_URL=postgres://postgres:postgres@localhost:5433/lotto_probability

# Repository Configuration
REPOSITORY_CHUNK_SIZE=500

# JWT Configuration (REQUIRED - Generate a secure random string)
JWT_SECRET=your-secret-jwt-key-change-this-in-production

# Stripe Configuration (REQUIRED for subscription features)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Email Configuration (Optional - will log to console if not set)
# RESEND_API_KEY=re_your_resend_api_key_here
# FROM_EMAIL=noreply@yourdomain.com
# APP_NAME=LottoLens

# Cron Job Intervals (set to 'off' to disable)
# Examples: '0 */6 * * *' (every 6 hours), '0 7 * * 0,2,4' (Sun,Tue,Thu at 7AM)
DRAWS_RESET_CRON_INTERVAL=off

# Estonian Lotteries
EST_EURO_JACKPOT_CRON_INTERVAL=off
EST_VIKING_LOTTO_CRON_INTERVAL=off
EST_BINGO_LOTTO_CRON_INTERVAL=off
EST_JOKKER_LOTTO_CRON_INTERVAL=off
EST_KENO_LOTTO_CRON_INTERVAL=off

# US Lotteries (scheduled ~3 hours after draws)
US_POWERBALL_CRON_INTERVAL=off           # Sun,Tue,Thu draws - example: '0 7 * * 0,2,4'
US_MEGA_MILLIONS_CRON_INTERVAL=off       # Wed,Sat draws - example: '0 7 * * 3,6'
US_CASH4LIFE_CRON_INTERVAL=off           # Daily draws - example: '0 5 * * *'

# UK Lotteries
UK_EUROMILLIONS_CRON_INTERVAL=off        # Tue,Fri draws
UK_LOTTO_CRON_INTERVAL=off               # Wed,Sat draws
UK_THUNDERBALL_CRON_INTERVAL=off         # Tue,Wed,Fri,Sat draws
UK_SET_FOR_LIFE_CRON_INTERVAL=off        # Mon,Thu draws