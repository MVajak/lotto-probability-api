# Server Configuration
PORT=3000
HOST=0.0.0.0

# OpenAPI Spec Configuration
OPEN_API_SPEC_POST=3000
OPEN_API_SPEC_HOST=localhost

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=lotto_probability
DATABASE_URL=postgres://postgres:postgres@localhost:5433/lotto_probability

# Repository Configuration
REPOSITORY_CHUNK_SIZE=500

# JWT Configuration (REQUIRED - Generate a secure random string)
JWT_SECRET=your-secret-jwt-key-change-this-in-production

# Stripe Configuration (REQUIRED for subscription features)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Email Configuration (Optional - will log to console if not set)
# RESEND_API_KEY=re_your_resend_api_key_here
# FROM_EMAIL=noreply@yourdomain.com
# APP_NAME=LottoLens

# Cron Job Intervals (set to 'off' to disable, ~1 hour after draws)
# All times in UTC

# Estonian Lotteries (draws ~20:00 EET = 18:00 UTC)
EST_BINGO_LOTTO_CRON_INTERVAL=off       # Wed 20:00 EET → '0 19 * * 3'
EST_JOKKER_LOTTO_CRON_INTERVAL=off      # Daily 20:00 EET → '0 19 * * *'
EST_KENO_LOTTO_CRON_INTERVAL=off        # Twice daily 14:15,21:15 EET → '0 6 * * *' (morning catch-up)

# US Lotteries (draws ~23:00 ET = 04:00 UTC next day)
US_POWERBALL_CRON_INTERVAL=off          # Mon,Wed,Sat 22:59 ET → '0 5 * * 2,4,0'
US_MEGA_MILLIONS_CRON_INTERVAL=off      # Tue,Fri 23:00 ET → '0 5 * * 3,6'
US_CASH4LIFE_CRON_INTERVAL=off          # Daily 21:00 ET → '0 3 * * *'

# UK Lotteries (draws ~20:00 UK)
UK_LOTTO_CRON_INTERVAL=off              # Wed,Sat 20:00 UK → '0 21 * * 3,6'
UK_THUNDERBALL_CRON_INTERVAL=off        # Tue,Wed,Fri,Sat 20:00 UK → '0 21 * * 2,3,5,6'
UK_SET_FOR_LIFE_CRON_INTERVAL=off       # Mon,Thu 20:00 UK → '0 21 * * 1,4'
UK_HOT_PICKS_CRON_INTERVAL=off          # Wed,Sat 20:00 UK → '0 21 * * 3,6'

# Irish Lotteries (draws at specified times, Irish time = UK time)
IE_LOTTO_CRON_INTERVAL=off              # Wed,Sat 20:00 IE → '0 21 * * 3,6'
IE_DAILY_MILLION_CRON_INTERVAL=off      # Daily 14:00,21:00 IE → '0 15,22 * * *'

# Spanish Lotteries (draws ~21:30 CET = 20:30 UTC, run ~1.5h after)
ES_LA_PRIMITIVA_CRON_INTERVAL=off       # Mon,Thu,Sat 21:30 CET → '0 23 * * 1,4,6'
ES_BONOLOTO_CRON_INTERVAL=off           # Mon-Sat 21:30 CET → '0 23 * * 1-6'
ES_EL_GORDO_CRON_INTERVAL=off           # Sun 13:00 CET → '0 15 * * 0'

# German Lotteries (all times in UTC)
DE_LOTTO_6AUS49_CRON_INTERVAL='* * * * *'       # Wed+Sat, fetch 21:00 UTC (22:00 CET) -> '0 21 * * 3,6'
DE_KENO_CRON_INTERVAL='* * * * *'               # Daily, fetch 21:00 UTC (22:00 CET) -> '0 21 * * *'

# Shared Lotteries
EUROMILLIONS_CRON_INTERVAL=off          # Tue,Fri 21:05 CET → '0 21 * * 2,5'
EUROJACKPOT_CRON_INTERVAL=off           # Tue,Fri 21:00 Helsinki → '0 20 * * 2,5'
VIKINGLOTTO_CRON_INTERVAL=off           # Wed 20:00 EET → '0 19 * * 3'
EURODREAMS_CRON_INTERVAL=off            # Mon,Thu 21:00 CET → '0 21 * * 1,4'
