{
  "name": "@lotto/worker",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist *.tsbuildinfo",
    "start": "node --env-file=../../.env -r source-map-support/register .",
    "dev": "nodemon --legacy-watch --watch 'src/**/*.ts' --exec 'node --env-file=../../.env -r ts-node/register -r source-map-support/register' src/index.ts",
    "test": "mocha --config ../../.mocharc.js 'src/**/tests/**/*.test.ts' 2>/dev/null || echo 'No tests found'"
  },
  "dependencies": {
    "@lotto/shared": "workspace:*",
    "@lotto/database": "workspace:*",
    "@lotto/core": "workspace:*",
    "@loopback/boot": "^8.0.8",
    "@loopback/core": "^7.0.7",
    "@loopback/repository": "^8.0.7",
    "lodash": "^4.17.21",
    "node-cron": "^3.0.3",
    "tslib": "^2.0.0"
  },
  "devDependencies": {
    "@loopback/testlab": "^7.0.12",
    "@types/lodash": "^4.17.17",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.0.0",
    "@types/node-cron": "^3.0.11",
    "mocha": "^11.7.5",
    "nodemon": "^3.1.10",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3"
  }
}
