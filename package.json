{
  "name": "lotto-probability-api",
  "version": "1.0.0",
  "private": true,
  "description": "Lotto probability API monorepo",
  "packageManager": "pnpm@10.19.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "dev": "pnpm --parallel --filter @lotto/api --filter @lotto/worker dev",
    "dev:api": "pnpm --filter @lotto/api dev",
    "dev:worker": "pnpm --filter @lotto/worker dev",
    "start:api": "pnpm --filter @lotto/api start",
    "start:worker": "pnpm --filter @lotto/worker start",
    "build": "pnpm --recursive build",
    "clean": "pnpm --recursive clean",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "test": "pnpm --recursive test",
    "migrate": "node-pg-migrate up -c migration.config.js",
    "migrate:create": "node-pg-migrate create -m sql -c migration.config.js",
    "migrate:down": "node-pg-migrate down -c migration.config.js"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "dotenv": "^17.2.3",
    "node-pg-migrate": "^8.0.3",
    "typescript": "~5.2.2"
  },
  "author": "Mihkel Vajak",
  "license": "UNLICENSED"
}
